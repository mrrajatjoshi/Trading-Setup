{
  "manifest_version": 3,
  "name": "Short Text Copier",
  "version": "1.4",
  "description": "Highlights elements with short text. Click to copy, use icon to open links.",
  "permissions": ["storage", "scripting", "activeTab", "tabs"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["link_icon.png"],
      "matches": ["<all_urls>"]
    }
  ]
}
